<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>
    <!-- Google Fonts for modern typography -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- Bootstrap and Custom Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* General Styles */
        body {
            background-color: #F7F7F7;
            font-family: 'Poppins', sans-serif;
        }

        /* Navbar Styles */
        .navbar {
            background-color: #262626;
            color: white;
            padding: 20px 40px;
            border-radius: 0 0 10px 10px;
        }

        .navbar-brand {
            color: #DE1B38;
            font-size: 26px;
            font-weight: 600;
            transition: color 0.3s ease;
        }

            .navbar-brand:hover {
                color: white;
            }

        .nav-link {
            color: white;
            font-weight: 500;
            margin-right: 20px;
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: #DE1B38;
            }

        /* Button Styles */
        .navbar-btn {
            background-color: #DE1B38;
            color: white;
            font-weight: 600;
            padding: 10px 20px;
            border-radius: 20px;
            transition: background-color 0.3s ease, transform 0.3s ease;
            margin-left: 20px;
        }

            .navbar-btn:hover {
                background-color: #bf162f;
                transform: scale(1.05);
            }

        /* Footer Styles */
        footer {
            background-color: #262626;
            color: white;
            padding: 20px;
            text-align: center;
        }

            footer a {
                color: #DE1B38;
            }

                footer a:hover {
                    color: white;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Contract Monthly Claim System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Submit">Submit Claim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="VerifyClaims">Verify Claims</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Track">Track Status</a>
                        </li>
                        <li class="nav-item">
                            <button class="navbar-btn">Login</button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2024 - Contract Monthly Claim System - Tokollo Nonyane
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
