@model Contract_Monthly_Claim_System.Models.Module

<h1 class="page-title">Add Module</h1>

<form asp-action="AddModule" method="post" class="module-form">
    <div class="form-group">
        <label asp-for="ModuleCode"></label>
        <input asp-for="ModuleCode" class="form-control" />
        <span asp-validation-for="ModuleCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ModuleName"></label>
        <input asp-for="ModuleName" class="form-control" />
        <span asp-validation-for="ModuleName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary add-module-btn">Add Module</button>
</form>

<style>
    /* Reuse the same styles as Manage Modules */
    .page-title {
        font-size: 2rem;
        color: #333;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-control {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #0066cc;
            outline: none;
        }

    .btn-primary, .add-module-btn {
        background-color: #0066cc;
        color: #fff;
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-primary:hover, .add-module-btn:hover {
            background-color: #005bb5;
            transform: translateY(-2px);
        }

    .text-danger {
        color: #cc0000;
        font-size: 0.9rem;
    }

    /* Responsive Styles */
    @@media (max-width: 768px) {
        .page-title {
            font-size: 1.8rem;
        }

        .add-module-btn {
            width: 100%;
            margin-top: 1rem;
        }
    }
</style>
