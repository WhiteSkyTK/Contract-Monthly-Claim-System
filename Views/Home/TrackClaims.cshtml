@model IEnumerable<Contract_Monthly_Claim_System.Models.Claims>

@{
    ViewData["Title"] = "Track Claims";
}

<div class="container">
    <h1 class="text-center">Track Your Claims</h1>

    <!-- Toggle buttons for List and Grid views -->
    <div class="view-toggle text-right mb-3">
        <button id="listViewBtn" class="btn btn-primary me-2">List View</button>
        <button id="gridViewBtn" class="btn btn-secondary">Grid View</button>
    </div>

    <!-- Claims container where the layout will change between list and grid views -->
    <div id="claimsContainer" class="row list-view">
        @if (Model != null && Model.Any())
        {
            foreach (var claim in Model)
            {
                <div class="col-12 mb-4 claim-item">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Claim ID: @claim.ClaimID</h5>
                            <p><strong>Status:</strong> <span class="status-text">@claim.Status</span></p>

                            <p><strong>Modules:</strong></p>
                            <ul>
                                @foreach (var module in claim.ClaimsModules)
                                {
                                    <li>@module.Module.ModuleName @module.ModuleCode</li>
                                }
                            </ul>

                            <p><strong>Hours Worked:</strong> @claim.HoursWorked</p>
                            <p><strong>Hourly Rate:</strong> R @claim.HourlyRate.ToString("F2")</p>

                            <div class="progress">
                                <div class="progress-bar @GetProgressBarClass(claim.Status)" role="progressbar" style="width: @(GetProgressPercentage(claim.Status))%" aria-valuenow="@GetProgressPercentage(claim.Status)" aria-valuemin="0" aria-valuemax="100">
                                    @claim.Status
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info" role="alert">
                    No claims found. Please submit your claims to track their status.
                </div>
            </div>
        }
    </div>
</div>

@functions {
    private string GetProgressBarClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Approved" => "bg-success",
            "Rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private int GetProgressPercentage(string status)
    {
        return status switch
        {
            "Pending" => 50,
            "Approved" => 100,
            "Rejected" => 0,
            _ => 0
        };
    }
}

<script>
    // JavaScript to toggle between List and Grid view
    document.getElementById('listViewBtn').addEventListener('click', function () {
        document.getElementById('claimsContainer').classList.remove('grid-view');
        document.getElementById('claimsContainer').classList.add('list-view');
    });

    document.getElementById('gridViewBtn').addEventListener('click', function () {
        document.getElementById('claimsContainer').classList.remove('list-view');
        document.getElementById('claimsContainer').classList.add('grid-view');
    });
</script>

<style>
    /* Default view (List View) */
    .list-view .claim-item {
        display: block;
    }

    /* Grid View layout */
    .grid-view .claim-item {
        display: flex;
        flex-direction: column;
        width: calc(33.333% - 20px); /* Three items per row */
        margin-right: 10px;
        margin-left: 10px;
    }

    /* Styling for cards */
    .card {
        border: 1px solid #DE1B38;
        border-radius: 10px;
    }

    /* Status bar and progress */
    .status-text {
        font-weight: bold;
    }

    .progress {
        height: 1.5rem;
        margin-top: 0.5rem;
    }

    /* Grid and List button styles */
    .view-toggle {
        margin-bottom: 20px;
    }

    ul {
        list-style-type: disc;
        margin-left: 20px;
    }

    /* Additional styles for a more fun interface */
    .btn {
        transition: background-color 0.3s, color 0.3s;
    }

        .btn:hover {
            background-color: #DE1B38;
            color: white;
        }
</style>
