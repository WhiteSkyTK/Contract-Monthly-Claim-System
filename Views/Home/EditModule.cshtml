@model Contract_Monthly_Claim_System.Models.Module

<h1 class="page-title">Edit Module</h1>

<form asp-action="EditModule" method="post" class="module-form">
    <div class="form-group">
        <label asp-for="ModuleCode"></label>
        <input asp-for="ModuleCode" class="form-control" readonly />
        <span asp-validation-for="ModuleCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ModuleName"></label>
        <input asp-for="ModuleName" class="form-control" />
        <span asp-validation-for="ModuleName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary edit-module-btn">Update Module</button>
</form>

<style>
    /* Page Title */
    .page-title {
        font-size: 2rem;
        color: #333;
        margin-bottom: 1.5rem;
    }

    /* Form Group */
    .form-group {
        margin-bottom: 1rem;
    }

    /* Form Control */
    .form-control {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #0066cc;
            outline: none;
        }

        .form-control[readonly] {
            background-color: #e9ecef;
            cursor: not-allowed;
        }

    /* Button */
    .btn-primary, .edit-module-btn {
        background-color: #0066cc;
        color: #fff;
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-primary:hover, .edit-module-btn:hover {
            background-color: #005bb5;
            transform: translateY(-2px);
        }

    .text-danger {
        color: #cc0000;
        font-size: 0.9rem;
    }

    /* Responsive Layout */
    @@media (max-width: 768px) {
        .page-title {
            font-size: 1.8rem;
        }

        .edit-module-btn {
            width: 100%;
            margin-top: 1rem;
        }
    }
</style>
